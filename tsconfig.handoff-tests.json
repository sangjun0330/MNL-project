{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2022",
    "outDir": ".tmp/handoff-tests",
    "noEmit": false,
    "declaration": false,
    "emitDeclarationOnly": false,
    "incremental": false,
    "jsx": "preserve",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/lib/safeParse.ts",
    "src/lib/handoff/types.ts",
    "src/lib/handoff/clinicalNlu.ts",
    "src/lib/handoff/medicalPronunciationLexicon.ts",
    "src/lib/handoff/deidGuard.ts",
    "src/lib/handoff/featureFlags.ts",
    "src/lib/handoff/normalize.ts",
    "src/lib/handoff/pipeline.ts",
    "src/lib/handoff/priority.ts",
    "src/lib/handoff/phiGuard.ts",
    "src/lib/handoff/split.ts",
    "src/lib/handoff/structure.ts",
    "src/lib/handoff/vault.ts",
    "src/lib/handoff/__tests__/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
